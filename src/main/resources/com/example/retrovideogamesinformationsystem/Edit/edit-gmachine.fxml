<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.retrovideogamesinformationsystem.Controllers.GMController">

    <Label layoutX="211.0" layoutY="26.0" text="EDIT A GAME MACHINE">
    <font>
        <Font size="21.0" />
    </font>
    </Label>

    <TextField fx:id="addMName" layoutX="60.0" layoutY="90.0" promptText="add name" />
    <TextField fx:id="addManu" layoutX="60.0" layoutY="130.0" promptText="add manufacturer" />
    <TextField fx:id="addType" layoutX="60.0" layoutY="170.0" promptText="add type" />
    <TextField fx:id="addYear" layoutX="60.0" layoutY="210.0" promptText="add year of launch" />
    <TextField fx:id="addMedia" layoutX="60.0" layoutY="250.0" promptText="add media" />
    <TextField fx:id="addPrice" layoutX="60.0" layoutY="290.0" promptText="add price" />
    <TextField fx:id="addURL" layoutX="60.0" layoutY="330.0" promptText="add URL" />

    <Button layoutX="240.0" layoutY="90.0" onAction="#updateGameMachine" prefHeight="25.0" prefWidth="137.0" text="Edit Game Machine" />
    <Button layoutX="400.0" layoutY="90.0" onAction="#displayGameMachine" prefHeight="25.0" prefWidth="67.0" text="Display" />
    <Button layoutX="240.0" layoutY="130.0" onAction="#switchToEdit" prefHeight="25.0" prefWidth="137.0" text="Back" />
    <ScrollPane layoutX="240.0" layoutY="170.0" prefHeight="185.0" prefWidth="330.0">
        <content>
            <Label fx:id="display" />
        </content>
    </ScrollPane>
    <Button layoutX="472.0" layoutY="90.0" onAction="#removeGame" prefHeight="25.0" prefWidth="67.0" text="Remove" />
    <ChoiceBox fx:id="ChoiceBoxGMName" layoutX="398.0" layoutY="130.0" prefHeight="25.0" prefWidth="142.0" />

</AnchorPane>
